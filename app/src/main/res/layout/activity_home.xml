<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".HomeActivity">

    <ImageView
        android:id="@+id/iv_buzz"
        android:layout_width="120dp"
        android:layout_height="170dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/buzz"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="230dp"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/iv_buzz"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_home_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아이디 : "
                style="@style/style_normal"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/et_home_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                style="@style/style_normal" />

        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="기수 : Android 3기"
            android:layout_weight="1"
            style="@style/style_normal"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="과정 : 앱개발 입문과정"
            android:layout_weight="1"
            style="@style/style_normal"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MBTI : INFP"
            android:layout_weight="1"
            style="@style/style_normal"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/btn_velog"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="40dp"
        android:background="@null"
        android:scaleType="centerInside"
        android:layout_marginStart="15dp"
        android:onClick="btnClick"

        app:layout_constraintBottom_toTopOf="@id/btn_finish"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_github"
        app:srcCompat="@drawable/velog" />

    <ImageButton
        android:id="@+id/btn_github"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="40dp"
        android:background="@null"
        android:scaleType="centerInside"
        android:layout_marginEnd="15dp"
        android:onClick="btnClick"

        app:layout_constraintBottom_toTopOf="@id/btn_finish"
        app:layout_constraintEnd_toStartOf="@+id/btn_velog"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/github" />

    <android.widget.Button
        android:id="@+id/btn_finish"
        style="@style/style_btn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="70dp"
        android:background="@drawable/btn"
        android:gravity="center"
        android:text="종료"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
